root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4
max_line_length = 88

[*.sql]
indent_size = 2
max_line_length = 120

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.sh]
indent_size = 4
end_of_line = lf

[Makefile]
indent_style = tab
